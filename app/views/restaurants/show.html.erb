<div class="container">
  <h1><%= @restaurant.name %></h1>
  <div class="row">
    <div class="col col-xs-6">
      <ul class="list-unstyled">
        <li>Address: <%= @restaurant.address %></li>
        <li>Category: <%= @restaurant.category %></li>
      </ul>
    </div>
    <div class="col col-xs-6">
      <h3>Restaurant reviews</h3>
      <ul>
        <% @restaurant.reviews.each_with_index do |review, index| %>
          <p><%= index + 1 %> - Review: <%= review.content %></p>
           <div class="list-inline">
             <% review.rating.times do |rating|  %>
             <li><i class="fas fa-heart"></i></li>
             <% end %>
          </div>
        <% end %>
      </ul>
      <%= link_to "+Add a review", new_restaurant_review_path(@restaurant) %>
    </div>
  </div>
  <div class="row">
    <%= link_to "Back to Restaurants", restaurants_path %>
  </div>
</div>

